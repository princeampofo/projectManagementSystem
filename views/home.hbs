{{#if removedUser}}
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    {{removedUser}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="row">
  <div class="col-6 text-primary"><h2>Projects</h2></div>
  <div class="col-6 d-flex justify-content-end">
    <a
      href="/addproject"
      type="button"
      class="btn btn-primary align-self-center"
    >+ Add New Project</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col" class="text-center">Id</th>
      <th scope="col" class="text-center">First Name</th>
      <th scope="col" class="text-center">Last Name</th>
      <th scope="col" class="text-center">Contact</th>
      <th scope="col" class="text-center">Location</th>
      <th scope="col" class="text-center">Request Status</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <th scope="row" class="align-middle text-center">{{this.id}}</th>
        <td class="align-middle text-center">{{this.firstname}}</td>
        <td class="align-middle text-center">{{this.lastname}}</td>
        <td class="align-middle text-center">{{this.contact}}</td>
        <td class="align-middle text-center">{{this.location}}</td>
        <td class="align-middle text-center">{{this.status}}</td>
        <td class="text-center">
          <a
            href="/viewproject/{{this.id}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-eye"></i>
            View</a>
          <a
            href="/editproject/{{this.id}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-pencil"></i>
            Edit</a>
          <a
            href="/{{this.id}}"
            type="button"
            class="btn btn-light btn-small"
          ><i class="bi bi-trash"></i>
            Delete</a>
        </td>
      </tr>
    {{/each}}

  </tbody>
</table>