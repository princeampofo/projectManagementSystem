{{#each data}}

  <div class="row pt-3">
    <div class="col text-center">
      <h2>{{this.firstname}} {{this.lastname}}</h2>
    </div>
  </div>

  <div class="row pt-3">
    <div class="col">
      <table class="table table-bordered">
        <thead class="thead-dark">
          <tr>
            <th scope="col" class="text-center">First Name</th>
            <th scope="col" class="text-center">Last Name</th>
            <th scope="col" class="text-center">Contact</th>
            <th scope="col" class="text-center">Location</th>
            <th scope="col" class="text-center">Request Status</th>
            <th scope="col" class="text-center">Request Date</th>
            <th scope="col" class="text-center">Estimated Date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="align-middle text-center">{{this.firstname}}</td>
            <td class="align-middle text-center">{{this.lastname}}</td>
            <td class="align-middle text-center">{{this.contact}}</td>
            <td class="align-middle text-center">{{this.location}}</td>
            <td class="align-middle text-center">{{this.status}}</td>
            <td class="align-middle text-center">{{this.today_date}}</td>
            <td class="align-middle text-center">{{this.estimated_date}}</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row">
      <div class="col">
        <h5>Request :</h5>
        <p>{{this.request}}</p>
      </div>
    </div>

  </div>

{{/each}}